# Node Environment
NODE_ENV=development

# Database Configuration
# For MongoDB Atlas (Cloud)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
# For local MongoDB
# MONGODB_URI=mongodb://localhost:27017/technurture

# Legacy PostgreSQL (if not using MongoDB)
# DATABASE_URL=postgresql://username:password@host:port/database

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_min_64_chars_long_for_production_security
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
JWT_ISSUER=technurture-api
JWT_AUDIENCE=technurture-client

# Encryption & Session Security
ENCRYPTION_KEY=your_32_byte_encryption_key_for_sensitive_data_protection
SESSION_SECRET=your_session_secret_key_for_cookie_signing_security
SESSION_NAME=technurture.sid

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://yourdomain.com
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' https:;

# Audit & Monitoring
ENABLE_AUDIT_LOG=false
AUDIT_RETENTION_DAYS=90
ENABLE_VIRUS_SCAN=false

# Rate Limiting
ENABLE_RATE_LIMIT=true

# Development Settings (remove in production)
SKIP_SSL_VERIFICATION=true
ENABLE_DEBUG_MODE=true